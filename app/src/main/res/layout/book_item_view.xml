<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/book_container"
    android:backgroundTint="#F1DCD1"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Rl_viewbook"
        android:orientation="vertical">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:id="@+id/iv_book"
            android:layout_margin="5dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_booktitle"
            android:layout_below="@+id/iv_book"
            android:layout_margin="5dp"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_authername"
            android:layout_below="@+id/tv_booktitle"
            android:layout_margin="5dp"
            android:textColor="@color/black"
            android:textSize="12dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_price"
            android:layout_below="@+id/tv_authername"
            android:layout_margin="5dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Rl_viewbook"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addToCartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:textSize="8dp"
            android:text="ADD TO CART"
            android:visibility="visible"/>

        <Button
            android:id="@+id/addedToCartBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="1dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:textSize="8dp"
            android:text="BOOK ADDED TO CART"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <Button
            android:id="@+id/wishlistBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/teal_200"
            android:textSize="8dp"
            android:text="WISHLIST"
            android:visibility="visible"/>




    </LinearLayout>
    </RelativeLayout>



</androidx.cardview.widget.CardView>